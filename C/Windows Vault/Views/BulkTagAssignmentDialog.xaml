<Window x:Class="WindowsVault.Views.BulkTagAssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Smart Tag Assignment"
        Height="650"
        Width="800"
        MinHeight="500"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Smart Tag Assignment"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <TextBlock FontSize="13"
                           Foreground="White"
                           Opacity="0.9"
                           Margin="0,6,0,0">
                    <Run Text="🏷️ Individual: Select tags → Click"/>
                    <Run Text="Tag This File" FontWeight="SemiBold"/>
                    <Run Text="• 📦 Bulk: Select files + tags → Apply Tags"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Media Files -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Media Files"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <!-- File List with Checkboxes -->
                <Border Grid.Row="1"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding MediaFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,3"
                                            Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                            BorderBrush="{DynamicResource SystemControlBackgroundChromeHighBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Bulk Selection Checkbox -->
                                            <CheckBox Grid.Column="0"
                                                      Grid.Row="0"
                                                      IsChecked="{Binding IsSelected}"
                                                      VerticalAlignment="Top"
                                                      Margin="0,2,12,0"
                                                      ToolTip="Include in bulk operations"/>

                                            <!-- Thumbnail -->
                                            <Border Grid.Column="1"
                                                    Grid.Row="0"
                                                    Grid.RowSpan="2"
                                                    Width="50"
                                                    Height="50"
                                                    CornerRadius="6"
                                                    Margin="0,0,12,0"
                                                    Background="{DynamicResource SystemControlBackgroundBaseMediumBrush}">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" 
                                                                      Opacity="0.1" 
                                                                      ShadowDepth="1" 
                                                                      BlurRadius="3"/>
                                                </Border.Effect>
                                                <Image Source="{Binding ThumbnailPath}"
                                                       Stretch="UniformToFill"
                                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </Border>

                                            <!-- File Info Row -->
                                            <StackPanel Grid.Column="2" 
                                                        Grid.Row="0" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0">
                                                <TextBlock Text="{Binding FileName}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding FileInfo}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Individual Tag Assignment Button -->
                                            <Button Grid.Column="3"
                                                    Grid.Row="0"
                                                    Content="🏷️ Tag This File"
                                                    MinWidth="100"
                                                    Height="32"
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    VerticalAlignment="Center"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    ToolTip="Apply currently selected tags to ONLY this file"
                                                    Command="{Binding DataContext.AssignIndividualTagsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>

                                            <!-- Current Tags Row -->
                                            <StackPanel Grid.Column="2"
                                                        Grid.ColumnSpan="2"
                                                        Grid.Row="1"
                                                        Orientation="Vertical"
                                                        Margin="0,8,0,0">
                                                <TextBlock Text="Current Tags:"
                                                           FontSize="10"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,0,0,4"
                                                           Visibility="{Binding CurrentTags.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                <ItemsControl ItemsSource="{Binding CurrentTags}"
                                                              Visibility="{Binding CurrentTags.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding Color}"
                                                                    CornerRadius="12"
                                                                    Padding="8,3"
                                                                    Margin="2">
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="10"
                                                                           FontWeight="Medium"
                                                                           Foreground="White"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock Text="No tags assigned - click 🏷️ Tag This File to add some!"
                                                           FontSize="10"
                                                           FontStyle="Italic"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CurrentTags.Count}" Value="0">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Selection Controls -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,8,0,0">
                    <Button Content="Select All"
                            Command="{Binding SelectAllCommand}"
                            Width="90"
                            Margin="0,0,4,0"/>
                    <Button Content="Select None"
                            Command="{Binding SelectNoneCommand}"
                            Width="90"
                            Margin="0,0,4,0"/>
                    <Button Content="Invert"
                            Command="{Binding InvertSelectionCommand}"
                            Width="90"/>
                    <TextBlock Text="{Binding SelectedCount, StringFormat={}{0} selected}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>

            <!-- Right Panel - Tags -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Quick Actions -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SystemControlBackgroundAccentBrush}"
                        CornerRadius="8"
                        Padding="12"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Quick Actions"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,8"/>
                        <WrapPanel>
                            <Button Content="📅 Date-based"
                                    Command="{Binding AutoTagByDateCommand}"
                                    Margin="0,0,4,4"
                                    ToolTip="Create tags based on date"/>
                            <Button Content="📁 Folder-based"
                                    Command="{Binding AutoTagByFolderCommand}"
                                    Margin="0,0,4,4"
                                    ToolTip="Create tags from folder names"/>
                            <Button Content="🎨 Type-based"
                                    Command="{Binding AutoTagByTypeCommand}"
                                    Margin="0,0,4,4"
                                    ToolTip="Tag by media type"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Recent Tags -->
                <Expander Grid.Row="1"
                          Header="Recent Tags"
                          IsExpanded="True"
                          Margin="0,0,0,12">
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            CornerRadius="4"
                            Padding="8"
                            Margin="0,4,0,0">
                        <ItemsControl ItemsSource="{Binding RecentTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.QuickAddTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="2"
                                            Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12"
                                                     Fill="{Binding Color}"
                                                     Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Expander>

                <!-- All Tags -->
                <Border Grid.Row="2"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Tag Selection"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="✨ Select tags below, then click 🏷️ Tag This File on individual media files"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>
                        </StackPanel>

                        <!-- Search Box -->
                        <TextBox Grid.Row="1"
                                 Text="{Binding TagSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ui:ControlHelper.PlaceholderText="Search tags..."
                                 Margin="0,0,0,8"/>

                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding FilteredTags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Margin="0,4"
                                                  IsChecked="{Binding IsSelected}">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="14" Height="14"
                                                         Fill="{Binding Color}"
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock Text="{Binding UsageCount, StringFormat={} ({0})}"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Create New Tag -->
                <Button Grid.Row="3"
                        Content="+ Create New Tag"
                        Command="{Binding CreateNewTagCommand}"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Summary -->
                <Border Grid.Column="0"
                        Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                        CornerRadius="6"
                        Padding="12,8"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💡"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Summary}"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <CheckBox Content="Apply to future imports"
                              IsChecked="{Binding RememberSettings}"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"
                              ToolTip="Automatically apply these tags to future imports"/>

                    <Button Content="Skip"
                            Click="SkipButton_Click"
                            Width="100"
                            Margin="0,0,8,0"/>

                    <Button Content="Apply Tags (Bulk)"
                            Click="ApplyButton_Click"
                            Width="130"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="{Binding CanApplyTags}"
                            ToolTip="Apply selected tags to all selected files"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>