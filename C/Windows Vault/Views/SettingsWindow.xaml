<Window x:Class="WindowsVault.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Settings" 
        Height="650" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Settings" 
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,20"/>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- General Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="General" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,16"/>
                        
                        <!-- Vault Path -->
                        <TextBlock Text="Vault Storage Location" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                    Text="{Binding VaultPath, UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="True"
                                    Margin="0,0,8,0"/>
                            <Button Grid.Column="1" 
                                   Content="Browse..." 
                                   Click="BrowseVaultPath_Click"
                                   Width="100"/>
                        </Grid>
                        
                        <!-- Thumbnail Size -->
                        <TextBlock Text="Default Thumbnail Size" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Slider x:Name="ThumbnailSizeSlider"
                                   Width="200"
                                   Minimum="100"
                                   Maximum="400"
                                   TickFrequency="50"
                                   IsSnapToTickEnabled="True"
                                   Value="{Binding ThumbnailSize}"
                                   Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding ElementName=ThumbnailSizeSlider, Path=Value, StringFormat={}{0:F0} px}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Dark Mode -->
                        <CheckBox Content="Enable Dark Mode" 
                                 IsChecked="{Binding DarkModeEnabled}"
                                 Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Restart required for theme changes to take effect"
                                  FontSize="11"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Backup Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Backup &amp; Recovery" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,16"/>
                        
                        <!-- Auto Backup -->
                        <CheckBox Content="Enable Automatic Backup" 
                                 IsChecked="{Binding AutoBackupEnabled}"
                                 Margin="0,0,0,12"/>
                        
                        <!-- Backup Interval -->
                        <TextBlock Text="Backup Interval (Hours)" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,4"
                                  IsEnabled="{Binding AutoBackupEnabled}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Slider x:Name="BackupIntervalSlider"
                                   Width="200"
                                   Minimum="1"
                                   Maximum="168"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   Value="{Binding BackupIntervalHours}"
                                   IsEnabled="{Binding AutoBackupEnabled}"
                                   Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding ElementName=BackupIntervalSlider, Path=Value, StringFormat={}{0:F0} hours}"
                                      VerticalAlignment="Center"
                                      IsEnabled="{Binding AutoBackupEnabled}"/>
                        </StackPanel>
                        
                        <!-- Backup Actions -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ“¥ Backup Now" 
                                   Click="BackupNow_Click"
                                   Margin="0,0,8,0"
                                   Width="120"/>
                            <Button Content="ðŸ“‚ Open Backup Folder" 
                                   Click="OpenBackupFolder_Click"
                                   Width="160"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Database Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Database Management" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,16"/>
                        
                        <!-- Database Stats -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="Total Media Files:" 
                                      Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                      Text="{Binding TotalMediaFiles}"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Total Tags:" 
                                      Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                      Text="{Binding TotalTags}"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Database Size:" 
                                      Margin="0,0,12,4"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                      Text="{Binding DatabaseSize}"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,4"/>
                        </Grid>
                        
                        <!-- Database Actions -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ”„ Optimize Database" 
                                   Click="OptimizeDatabase_Click"
                                   Margin="0,0,8,0"
                                   Width="160"/>
                            <Button Content="ðŸ§¹ Clean Orphaned Files" 
                                   Click="CleanOrphanedFiles_Click"
                                   Width="180"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Import/Export Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Import &amp; Export" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Export your library data or import from another Windows Vault"
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ“¤ Export Library" 
                                   Click="ExportLibrary_Click"
                                   Margin="0,0,8,0"
                                   Width="130"/>
                            <Button Content="ðŸ“¥ Import Library" 
                                   Click="ImportLibrary_Click"
                                   Width="130"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- About Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="About" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock FontSize="14" Margin="0,0,0,4">
                            <Run Text="Windows Vault" FontWeight="SemiBold"/>
                            <Run Text="v1.0.0"/>
                        </TextBlock>
                        
                        <TextBlock Text="A modern media management application for Windows"
                                  TextWrapping="Wrap"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  Margin="0,0,0,8"/>
                        
                        <Button Content="ðŸ“‹ View Licenses" 
                               Click="ViewLicenses_Click"
                               Width="130"
                               HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                      Text="{Binding StatusMessage}"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Cancel" 
                       Width="100" 
                       Click="Cancel_Click"
                       Margin="0,0,8,0"/>
                <Button Content="Save Changes" 
                       Width="120"
                       Style="{StaticResource AccentButtonStyle}"
                       Click="SaveChanges_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
