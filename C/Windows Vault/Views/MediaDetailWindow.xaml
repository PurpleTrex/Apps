<Window x:Class="WindowsVault.Views.MediaDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Media Details" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Column - Media Preview -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Preview" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,16"/>
                
                <!-- Media Preview -->
                <Border Background="Black" 
                        CornerRadius="8" 
                        Height="400"
                        Margin="0,0,0,16">
                    <Image Source="{Binding MediaFile.ThumbnailPath}" 
                           Stretch="Uniform"/>
                </Border>
                
                <!-- Media Info -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="{Binding MediaFile.FileName}" 
                              FontWeight="SemiBold" 
                              FontSize="14"
                              TextWrapping="Wrap"
                              Margin="0,0,0,8"/>
                    
                    <TextBlock Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                        <Run Text="Type: "/>
                        <Run Text="{Binding MediaFile.MediaType, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    
                    <TextBlock Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}">
                        <Run Text="Size: "/>
                        <Run Text="{Binding MediaFile.FileSizeFormatted, Mode=OneWay}" FontWeight="SemiBold"/>
                    </TextBlock>
                    
                    <TextBlock Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              Visibility="{Binding MediaFile.Width, Converter={StaticResource BoolToVisibility}}">
                        <Run Text="Dimensions: "/>
                        <Run Text="{Binding MediaFile.Width, Mode=OneWay}"/>
                        <Run Text=" × "/>
                        <Run Text="{Binding MediaFile.Height, Mode=OneWay}"/>
                    </TextBlock>
                    
                    <TextBlock Text="{Binding MediaFile.DateAdded, StringFormat='Added: {0:MMM dd, yyyy}'}"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
                
                <!-- Actions -->
                <Button Content="⭐ Toggle Favorite" 
                        Click="ToggleFavoriteButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Right Column - Tag Management -->
        <Border Grid.Column="1" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8"
                Padding="20"
                Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Assigned Tags Section -->
                <TextBlock Grid.Row="0" 
                          Text="Assigned Tags" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,12"/>
                
                <Border Grid.Row="1" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,0,12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AssignedTags}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="AssignedTagBorder"
                                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                            CornerRadius="4"
                                            Margin="8"
                                            Padding="12"
                                            Cursor="Hand"
                                            BorderBrush="Transparent"
                                            BorderThickness="2"
                                            MouseLeftButtonDown="AssignedTag_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAltAccentBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Ellipse Grid.Column="0"
                                                    Width="16" 
                                                    Height="16" 
                                                    Fill="{Binding Color}" 
                                                    Margin="0,0,12,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                          TextWrapping="Wrap"
                                                          FontSize="11"
                                                          Visibility="{Binding Description, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Remove Button -->
                <Button Grid.Row="2" 
                        Content="Remove Selected Tag ↓" 
                        Click="RemoveTagButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,20"
                        IsEnabled="{Binding SelectedAssignedTag, Converter={StaticResource BoolToVisibility}}"/>
                
                <!-- Available Tags Section -->
                <TextBlock Grid.Row="3" 
                          Text="Available Tags" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Margin="0,20,0,12"
                          Grid.RowSpan="2"/>
                
                <Border Grid.Row="3" 
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,44,0,12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AvailableTags}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="AvailableTagBorder"
                                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                            CornerRadius="4"
                                            Margin="8"
                                            Padding="12"
                                            Cursor="Hand"
                                            BorderBrush="Transparent"
                                            BorderThickness="2"
                                            MouseLeftButtonDown="AvailableTag_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAltAccentBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Ellipse Grid.Column="0"
                                                    Width="16" 
                                                    Height="16" 
                                                    Fill="{Binding Color}" 
                                                    Margin="0,0,12,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}"
                                                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                          TextWrapping="Wrap"
                                                          FontSize="11"
                                                          Visibility="{Binding Description, Converter={StaticResource BoolToVisibility}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Add Button -->
                <Button Grid.Row="4" 
                        Content="↑ Add Selected Tag" 
                        Click="AssignTagButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        IsEnabled="{Binding SelectedAvailableTag, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
