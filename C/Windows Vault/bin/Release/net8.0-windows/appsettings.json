{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=vault.db"
  },
  "VaultSettings": {
    "DefaultVaultPath": "%USERPROFILE%\\Documents\\WindowsVault",
    "SupportedImageFormats": [ ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff", ".webp", ".svg" ],
    "SupportedVideoFormats": [ ".mp4", ".avi", ".mkv", ".mov", ".wmv", ".flv", ".webm", ".m4v" ],
    "SupportedAudioFormats": [ ".mp3", ".wav", ".flac", ".aac", ".ogg", ".wma", ".m4a" ],
    "SupportedDocumentFormats": [ ".pdf", ".doc", ".docx", ".txt", ".rtf", ".odt" ],
    "ThumbnailSize": 200,
    "MaxFileSize": 2147483648,
    "EnableAutoBackup": true,
    "BackupIntervalHours": 24,
    "ItemsPerPage": 50,
    "MaxRating": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/vault-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}