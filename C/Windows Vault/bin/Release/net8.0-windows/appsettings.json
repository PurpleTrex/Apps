{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=vault.db"
  },
  "VaultSettings": {
    "DefaultVaultPath": "%USERPROFILE%\\Documents\\WindowsVault",
    "SupportedImageFormats": [ ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff", ".webp", ".svg" ],
    "SupportedVideoFormats": [ ".mp4", ".avi", ".mkv", ".mov", ".wmv", ".flv", ".webm", ".m4v" ],
    "SupportedAudioFormats": [ ".mp3", ".wav", ".flac", ".aac", ".ogg", ".wma", ".m4a" ],
    "ThumbnailSize": 200,
    "MaxFileSize": 2147483648,
    "EnableAutoBackup": true,
    "BackupIntervalHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}