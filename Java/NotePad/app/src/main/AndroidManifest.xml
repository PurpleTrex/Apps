<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" 
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".NotePadApp"
        android:allowBackup="false"
        android:fullBackupContent="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotePad">

        <activity
            android:name=".ui.browser.PrivateBrowserActivity"
            android:exported="false"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.NotePad" />

        <activity
            android:name=".ui.vault.SecretVaultActivity"
            android:exported="false"
            android:theme="@style/Theme.NotePad" />

        <activity
            android:name=".ui.setup.SetupActivity"
            android:exported="false"
            android:theme="@style/Theme.NotePad" />

        <activity
            android:name=".ui.ai.AIChattActivity"
            android:exported="false"
            android:theme="@style/Theme.NotePad" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NotePad">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- FileProvider for sharing files from vault -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>
